# ==========================================
# AI-Engine Environment Configuration
# ==========================================

ENV=development                              #Môi trường chạy: development, staging, hoặc production
DEBUG=true                                   #Bật chế độ debug (hiển thị log chi tiết)
LOG_LEVEL=INFO                               #Mức độ log: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==========================================
# WebSocket Configuration
# ==========================================

WEBSOCKET_URL=ws://192.168.1.100:8080/ws     #URL WebSocket để kết nối với robot hoặc server
WEBSOCKET_RECONNECT_INTERVAL=5               #Thời gian chờ giữa các lần reconnect (giây)
WEBSOCKET_MAX_RETRIES=10                     #Số lần thử reconnect tối đa
WEBSOCKET_PING_INTERVAL=30                   #Khoảng thời gian gửi ping để giữ kết nối (giây)
WEBSOCKET_TIMEOUT=60                         #Thời gian timeout nếu không nhận phản hồi (giây)

# ==========================================
# Camera Configuration
# ==========================================

CAMERA_INDEX=0                               #Chỉ số camera (0 là mặc định)
CAMERA_WIDTH=640                             #Độ rộng khung hình
CAMERA_HEIGHT=480                            #Độ cao khung hình
CAMERA_FPS=30                                #Số khung hình mỗi giây từ camera
CAMERA_BUFFER_SIZE=10                        #Số lượng khung hình lưu trong bộ đệm

VIDEO_PROCESSING_FPS=15                      #Tốc độ xử lý video (VD: xử lý 15 khung hình mỗi giây)
ENABLE_FACE_DETECTION=true                   #Bật tính năng phát hiện khuôn mặt
ENABLE_MOTION_DETECTION=true                 #Bật tính năng phát hiện chuyển động
ENABLE_OBJECT_DETECTION=false                #Bật phát hiện vật thể (YOLO)
ENABLE_POSE_ESTIMATION=false                 #Bật ước lượng tư thế (pose estimation)

FACE_DETECTION_CONFIDENCE=0.7                #Ngưỡng độ tin cậy khi phát hiện khuôn mặt
FACE_RECOGNITION_THRESHOLD=0.6               #Ngưỡng xác định người quen trong nhận diện khuôn mặt
FACE_DB_PATH=src/models/face_recognition/embeddings.pkl     #Đường dẫn tới file database khuôn mặt

# ==========================================
# Audio Configuration
# ==========================================

AUDIO_SAMPLE_RATE=16000                      #Tần số lấy mẫu âm thanh (Hz)
AUDIO_CHANNELS=1                             #Số kênh âm thanh (mono = 1)
AUDIO_CHUNK_SIZE=1024                        #Kích thước mỗi đoạn âm thanh xử lý
AUDIO_BUFFER_DURATION=5                      #Thời gian lưu âm thanh trong buffer (giây)

STT_MODEL=base                               #Mô hình chuyển giọng nói thành văn bản (Whisper)
STT_LANGUAGE=en                              #Ngôn ngữ đầu vào của STT
ENABLE_VAD=true                              #Bật phát hiện hoạt động giọng nói (Voice Activity Detection)

TTS_ENGINE=gtts                              #Công cụ chuyển văn bản thành giọng nói (gtts, coqui)
TTS_LANGUAGE=en                              #Ngôn ngữ đầu ra của TTS
TTS_VOICE=en-US                              #Giọng nói đầu ra (nếu engine hỗ trợ)

# ==========================================
# LLM Configuration
# ==========================================

LLM_PROVIDER=openai                          #Nhà cung cấp mô hình ngôn ngữ (openai, anthropic, ollama)
LLM_MODEL=gpt-4-turbo-preview                #Tên mô hình LLM sử dụng
LLM_TEMPERATURE=0.7                          #Độ sáng tạo của mô hình (0.0–1.0)
LLM_MAX_TOKENS=500                           #Số lượng token tối đa cho mỗi phản hồi
LLM_TIMEOUT=30                               #Timeout khi gọi API LLM (giây)

OPENAI_API_KEY=sk-your-openai-api-key-here  #Khóa API của OpenAI
OPENAI_ORG_ID=                               #ID tổ chức OpenAI (nếu có)

ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here        #Khóa API của Anthropic Claude

OLLAMA_BASE_URL=http://localhost:11434       #URL của Ollama server nội bộ
OLLAMA_MODEL=llama2                          #Tên mô hình Ollama sử dụng

# ==========================================
# Behavior & Personality
# ==========================================

ROBOT_NAME=Atlas                             #Tên robot
ROBOT_PERSONALITY=friendly                   #Tính cách robot (friendly, professional, playful)
ROBOT_VOICE_SPEED=1.0                        #Tốc độ nói của robot
ENABLE_EMOTIONS=true                         #Bật mô phỏng cảm xúc
EMOTION_RESPONSE_DELAY=0.5                   #Độ trễ phản ứng cảm xúc (giây)

# ==========================================
# Performance & Resources
# ==========================================

MAX_WORKERS=4                                #Số luồng xử lý song song
ENABLE_GPU=true                              #Bật sử dụng GPU
GPU_DEVICE=0                                 #Chỉ số thiết bị GPU
MODEL_PRECISION=fp16                         #Độ chính xác mô hình (fp32, fp16)

MAX_MEMORY_MB=2048                           #Giới hạn bộ nhớ sử dụng (MB)
ENABLE_MEMORY_PROFILING=false                #Bật theo dõi bộ nhớ

# ==========================================
# Storage & Database
# ==========================================

REDIS_HOST=localhost                         #Địa chỉ Redis server
REDIS_PORT=6379                              #Cổng Redis
REDIS_DB=0                                   #Chỉ số database Redis
REDIS_PASSWORD=                              #Mật khẩu Redis (nếu có)

DATABASE_URL=sqlite:///./ai_engine.db        #Đường dẫn database SQLite

# ==========================================
# Monitoring & Logging
# ==========================================

ENABLE_METRICS=true                          #Bật hệ thống theo dõi hiệu năng
METRICS_PORT=9090                            #Cổng cho metrics server
LOG_FILE=logs/ai_engine.log                  #Đường dẫn file log
LOG_ROTATION=10 MB                           #Dung lượng tối đa trước khi xoay log
LOG_RETENTION=7 days                         #Thời gian giữ log

SENTRY_DSN=                                  #DSN của Sentry để theo dõi lỗi

# ==========================================
# API Configuration (Optional)
# ==========================================

API_ENABLED=false                            #Bật API nội bộ (FastAPI)
API_HOST=0.0.0.0                             #Địa chỉ host API
API_PORT=8000                                #Cổng API
API_WORKERS=2                                #Số lượng worker cho API

# ==========================================
# Security
# ==========================================

SECRET_KEY=change-this-to-a-random-secret-key        #Khóa bí mật dùng cho mã hóa nội bộ
API_KEY=your-api-key-for-internal-use                #Khóa API nội bộ
ENABLE_CORS=true                                     #Bật CORS cho API
ALLOWED_ORIGINS=["http://localhost:3000"]            #Danh sách origin được phép truy cập API

# ==========================================
# Features Toggle
# ==========================================

ENABLE_FACE_RECOGNITION=true              #Bật nhận diện khuôn mặt
ENABLE_VOICE_RECOGNITION=true             #Bật nhận diện giọng nói
ENABLE_CONVERSATION=true                  #Bật hội thoại NLP
ENABLE_BEHAVIOR_ENGINE=true               #Bật mô hình hành vi robot
ENABLE_ANALYTICS=false                    #Bật phân tích dữ liệu cảm biến
